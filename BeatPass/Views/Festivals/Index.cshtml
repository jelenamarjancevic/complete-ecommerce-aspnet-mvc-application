<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col d-flex">
            <div class="card fest-card flex-fill">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@item.Name</h5>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <div style="position:fixed; right:25px; bottom:70px; z-index:1000;">
                            <a asp-controller="Festivals" asp-action="Create" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Add New
                            </a>
                        </div>
                    } 
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="text-white" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="text-white float-right mx-2" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash"></i>
                        </a>
                    }
                </div>

                <img class="fest-card-img" src="@item.Logo" alt="@item.Name" />

                <div class="card-body fest-card-body">
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><b>Festival:</b> @item.Name</p>
                    <p class="card-text"><b>Category:</b> @item.FestivalCategory</p>
                    <p class="card-text"><b>Start Date:</b> @item.StartDate.ToString("dd MMM yy")</p>
                    <p class="card-text"><b>End Date:</b> @item.EndDate.ToString("dd MMM yy")</p>

                    <p>
                        <b>Status:</b>
                        @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                        {
                            <span class="badge bg-success text-white">AVAILABLE</span>
                        }
                        else if (DateTime.Now > item.EndDate)
                        {
                            <span class="badge bg-danger text-white">EXPIRED</span>
                        }
                        else
                        {
                            <span class="badge bg-primary text-white">UPCOMING</span>
                        }
                    </p>
                </div>

                <div class="card-footer fest-card-footer">
                    <div class="d-flex justify-content-between align-items-center flex-nowrap gap-2">
                        <a class="btn btn-outline-primary text-nowrap" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-eye-fill"></i> Details
                        </a>

                        <a class="btn btn-success text-white text-nowrap"
                           asp-controller="Orders"
                           asp-action="AddItemToShoppingCart"
                           asp-route-id="@item.Id">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                            <small class="opacity-75"> (@item.Price.ToString("c"))</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
