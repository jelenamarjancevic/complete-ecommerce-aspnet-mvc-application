@model NewFestivalVM
@using BeatPass.Data.Enums;

@{
    ViewData["Title"] = "Create a new Festival";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new Festival</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="StartDate" class="control-label"></label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="EndDate" class="control-label"></label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Logo" class="control-label"></label>
                                <input asp-for="Logo" class="form-control" />
                                <span asp-validation-for="Logo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="LocationId" class="control-label"></label>
                                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.Locations" ></select>
                                <span asp-validation-for="LocationId" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="FestivalCategory" class="control-label"></label>
                                <select asp-for="FestivalCategory" class="form-control" asp-items="Html.GetEnumSelectList<FestivalCategory>()"></select>
                                <span asp-validation-for="FestivalCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="OrganizationId" class="control-label"></label>
                                <select asp-for="OrganizationId" class="form-control" asp-items="ViewBag.Organizations"></select>
                                <span asp-validation-for="OrganizationId" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="ArtistIds" class="control-label"></label>
                                <select asp-for="ArtistIds" class="form-control" multiple asp-items="ViewBag.Artists"></select>
                                <span asp-validation-for="ArtistIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" multiple></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="LogoPreview" />
                    </div>
                    <div class="form-group d-flex justify-content-between mt-4">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $("#Logo").on("change", function() {
            var output = document.getElementById('LogoPreview');
            output.src = $(this).val();
        });
    </script>
}